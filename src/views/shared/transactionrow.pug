mixin transactionrow(transaction) 
  tr
    td= transaction.categoryDisplayName
    td(data-date=transaction.created).datedisplay #{transaction.displayDate}
    td= transaction.description
    td= transaction.displayAmount
    td= transaction.displayBalance
    td 
      if transaction.is_load
        span.glyphicon.glyphicon-link
      else 
        a(href='/transactions/' + transaction.id) 
          span.glyphicon.glyphicon-link